@model IEnumerable<RideBikeWeb.Models.EventViewModels>

@{
    ViewBag.Title = "Events";
}

<h2>Events</h2>

<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(x => x.Name)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Location)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(x => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(x => item.DateTime)
                </td>
                <td>
                    @Html.DisplayFor(x => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Location)
                </td>
                <td>
                    @Html.ActionLink("Create New Team", "CreateTeam", new { userId = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

